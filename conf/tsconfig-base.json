{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "../dist/types",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "../dist",
    "../src/**/*.test.ts"
  ]
}
